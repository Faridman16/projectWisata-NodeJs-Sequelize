<div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Registrasi
                    <small> Its free</small>
                </h3>
            </div>
            <div class="panel-body">
                <form role="form" action="/admin/addUser" method="post" name="signup" id="'signup" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4" style="margin-bottom: 20px;">
                            <img src="../../images/profile/Anonymous.jpg" id="photoProfile" width="150" height="150" class="img-circle center-block">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input class="form-control input-sm" type="text" name="firstname" id="firstname" placeholder="First Name">
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input class="form-control input-sm" type="text" name="lastname" id="lastname" placeholder="Last Name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input class="form-control input-sm validate-input" type="email" id="email" name="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input class="form-control input-sm" type="username" id="username" name="username" placeholder="Username">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input class="form-control input-sm" type="password" id="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input class="form-control input-sm" type="password" id="confirmpassword" name="confirmpassword" placeholder="Confirm Password">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                <input class="form-control input-sm" type="file" name="photoProfile" accept="image/jpeg,image/jpg" onchange="readURL(this)">
                            </div>
                        </div>
                    </div>
                    <input class="btn btn-info btn-block" type="submit" value="Register">
                </form>
            </div>
        </div>
    </div>
</div>